<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="GearHonService.Views.Navigation.FlyoutHeader"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid Margin="15">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Image
            Grid.Column="0"
            HeightRequest="50"
            HorizontalOptions="Start"
            Source="https://pbs.twimg.com/profile_images/645601415973355521/No1ZTxyn_400x400.jpg"
            WidthRequest="50">
            <Image.Clip>
                <EllipseGeometry
                    Center="25,25"
                    RadiusX="25"
                    RadiusY="25" />
            </Image.Clip>
        </Image>

        <Label
            Grid.Column="1"
            Margin="20,20,0,0"
            FontAttributes="Bold"
            FontFamily="RobatoBold"
            FontSize="Medium"
            HeightRequest="50"
            Text="Fehr Benjamin"
            VerticalOptions="Center" />
    </Grid>
</ContentView>
