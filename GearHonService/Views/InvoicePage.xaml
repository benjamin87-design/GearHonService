<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GearHonService.Views.InvoicePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:GearHonService.ViewModels"
    Title="InvoicePage"
    x:DataType="vm:InvoiceViewModel">
    
    <VerticalStackLayout>
        <DatePicker Format="MM.yyyy"
                    Date="{Binding InvoiceDateSelection, Mode=TwoWay}">
            <DatePicker.Behaviors>
                <toolkit:EventToCommandBehavior Command="{Binding MonthAndYearChangedCommand}" EventName="DateSelected" />
            </DatePicker.Behaviors>
        </DatePicker>

        <Picker SelectedItem="{Binding SelectedContractor}" ItemsSource="{Binding Contractors}" ItemDisplayBinding="{Binding ContractorName}"/>
        
        <Picker SelectedItem="{Binding SelectedCurrency}" ItemsSource="{Binding Currencies}" ItemDisplayBinding="{Binding Code}"/>
        
        <Button Text="Create" Command="{Binding CreateInvoiceCommand}"/>
    </VerticalStackLayout>
</ContentPage>